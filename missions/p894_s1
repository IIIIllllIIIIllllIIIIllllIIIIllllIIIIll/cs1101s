                }
            );
            
            $(".launchMedia").click( function () { return launchMedia(this); });
            $(".figref").click( function (e) { return LaunchDOMContentPreview($(this).attr("href"), "figure", e.pageX, e.pageY); });
            $(".citeref").click( function (e) { return LaunchDOMContentPreview($(this).attr("href"), "reference", e.pageX, e.pageY); });
